@model Person

@if (Model != null)
{
    <div class="row">
        <div class="col-3">
            <p>@Model.FirstName</p>
        </div>

        <div class="col-3">
            <p>@Model.LastName</p>
        </div>

        <div class="col-2">
            <p>@Model.CurrentCity</p>
        </div>

        <div class="col-2">
            <p>@Model.CellphoneNumber</p>
        </div>

        <div class="col-1">
            <a asp-action="Edit" asp-route-id="@Model.Id">|Edit|</a>
        </div>

        <div class="col-1">
            <a asp-action="Remove" asp-route-id="@Model.Id" method="post">|Remove|</a>
        </div>
    </div>
}
