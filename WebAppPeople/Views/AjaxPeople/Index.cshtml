@{
    ViewData["Title"] = "Index";
}

<h5>List of people</h5>

<br />

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-3">
                <button id="peopleBtn">Show people in list</button>
            </div>
            <div class="col-7">
                <button id="searchBtn">Search by Id</button>
                <input type="text" id="searchTextInput" placeholder="Person Id" />
            </div>
            <div class="col-2">
                <button id="removeBtn">Remove person</button>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-3">
                <h5>First Name</h5>
            </div>

            <div class="col-3">
                <h5>Last Name</h5>
            </div>

            <div class="col-2">
                <h5> City</h5>
            </div>

            <div class="col-2">
                <h5>Mobile nr.</h5>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div id="result"></div>
    </div>
</div>

<script src="~/js/myJs.js"></script>
